[Unit]
Description=Diffie-Hellman group generator
Requisite=goauthentik.service


[Service]
Type=oneshot
ExecStart=runagent generate-dhpem
ExecStartPost=/usr/bin/podman  cp certificates/dh.pem goauthentik-app:certs/dh.pem
ExecStartPost=/usr/bin/podman  cp certificates/goauthentik.pem goauthentik-app:certs/goauthentik.pem
WorkingDirectory=%S/state
SyslogIdentifier=%u/%N

